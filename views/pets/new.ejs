<% layout('/layouts/boilerplate') %>
<div class="row">
  <div class="col-6 offset-3">
    <img src="https://images.unsplash.com/photo-1524511751214-b0a384dd9afe?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2574&q=80" alt="" class="card-img-top" />
    <h1 class="text-center">New post</h1>

    <form action="/pets" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
      <div class="mb-6">
        <label class="form-label" for="title">type animals</label>
        <input class="form-control" type="text" id="title" name="pet[title]" placeholder="type animals" required />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-6">
        <label class="form-label" for="location">Name pet</label>
        <input class="form-control" type="text" id="location" name="pet[location]" placeholder="name pet" required />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-6">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text" id="description" name="pet[description]" placeholder="description" required></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-6">
        <label class="form-label" for="image">Choose photo</label>
        <input class="form-control" type="file" name="image" id="" multiple>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <br>
      <div class="mb-6">
        <div class="d-grid gap-2">
          <button class="btn btn-success">Add post</button>
        </div>
        <br>

      </div>
    </form>

  </div>
</div>