<% layout('/layouts/boilerplate') %>


<div class="row  ">
  <div class="col-6 offset-3">
    <div class="card shadow border border-0">
      <img src="https://images.unsplash.com/photo-1545529468-42764ef8c85f?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2373&q=80" alt="" class="card-img-top w" />
      <div class="card-body">
        <h5 class="text-center">Register</h5>
        <form action="/register" method="POST" class="validated-form" novalidate>
          <div class="mb-3">
            <label class="form-label" for="username">Username</label>
            <input class="form-control" type="text" id="username" name="username" placeholder="Username" autofocus required />
            <div class="valid-feedback">Looks good!</div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <input class="form-control" type="email" id="email" name="email" placeholder="Email" required />
            <div class="valid-feedback">Looks good!</div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" id="password" name="password" placeholder="Password" required />
            <div class="valid-feedback">Looks good!</div>
          </div>
          <div class="d-grid gap-2">
            <button class="btn btn-success">Register</button>
          </div>
        </form>
        </form>
      </div>
    </div>
  </div>
</div>